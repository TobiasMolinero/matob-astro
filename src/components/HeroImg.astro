---
import { Image } from "astro:assets";

interface Props {
    src: ImageMetadata
}

const { src } = Astro.props
---

<div class="container-img" >
    <Image class='img' src={src} alt="Imagen representativa de graficos de barra y estadisticas."/>
    <!-- <img class="img" src={hero_image.src} alt="Imagen representativa de graficos de barra y estadisticas."> -->
