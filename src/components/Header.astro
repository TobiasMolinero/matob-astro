---
import { Image } from 'astro:assets';
import { logo_white, CaretRight } from '@lib'
import { DropDownNav } from '@components';
---

<header class="header">
    <div class="container-logo">
        <img class="logo" src={logo_white.src} alt="Logo de matob">
    </div>
    <nav class="nav">
        <ul class="menu-nav">
            <li class="menu-item">
                <a class="menu-item_link" href="#servicios">
                    Servicios
                    <Image src={CaretRight} class="caret" alt="Icono de flecha para la opci칩n de servicios.">
                </a>
                <div class="dropdown-services">
                    <ul class="dropdown-menu">
                        <li class="dropdown-item">
                            <a href="" class="dropdown-link">Sistemas de gesti칩n</a>
                        </li>
                        <li class="dropdown-item">
                            <a href="" class="dropdown-link">An치lisis de datos</a>
                        </li>
                        <li class="dropdown-item">
                            <a href="" class="dropdown-link">Dise침o y desarrollo web</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="menu-item">
                <a class="menu-item_link" href="#nosotros">
                    Nosotros
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-item_link" href="#contacto">
                    Contacto
                </a>
            </li>
        </ul>
    </nav>
    <DropDownNav />
</header>

<style>
    .header{
        width: 100%;
        max-width: 1480px;
        position: relative;
        height: 60px;
        display: flex;
        justify-content: center;
    }

    .container-logo{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 180px;
    }

    .logo{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .nav{
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .menu-nav{
        list-style: none;
        display: flex;
        column-gap: 40px;
    }

    .menu-item{
        position: relative;
    }

    .menu-item:hover .menu-item_link{
        text-shadow: 0px 0px 1px var(--title);
    }

    .menu-item:hover .dropdown-services{
        visibility: visible;
        opacity: 1;
    }

    .menu-item_link{
        color: var(--title);
        font-weight: 700;
        text-decoration: none;
    }

    .caret{
        transition: 0.3s;
    }

    .menu-item:hover .caret{
        transform: rotate(90deg);
    }

    /* DROPDOWN SERVICIOS */

    .dropdown-services{
        visibility: hidden;
        opacity: 0;
        position: absolute;
        top: 30px;
        left: -70px;
        width: 200px;
        transition: 0.3s;
    }

    .dropdown-menu{
        list-style: none;
        background: var(--bg-button);
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        box-shadow: var(--shadow);
    }

    .dropdown-item:hover .dropdown-link{
        font-size: 14px;
        font-weight: 900;
    }

    .dropdown-link{
        color: var(--title);
        text-decoration: none;
        font-weight: 700;
        font-size: 14px;
    }

    @media screen and (max-width: 1023px){

        .header{
            justify-content: end;
            padding: 0 20px;
        }

        .nav{
            display: none;
        }

        .dropdown-services{
            display: none;
        }

    }

</style>