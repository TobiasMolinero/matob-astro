---
interface Props {
    title: string
    side: 'left' | 'right'
}

const { title, side } = Astro.props
---

<div class=`container`>
    <h2 class=`title ${side}`>{title}</h2>
</div>

<style>
    .container{
        background: var(--bg-button);
        height: 280px;
        width: 300px;
        display: flex;
        justify-content: end;
        align-items: end;
        padding: 15px;
        border-radius: 10px;
        box-shadow: var(--shadow);
    }

    .title{
        font-size: 45px;
        font-weight: 700;
        color: var(--title);
    }
    .left{text-align: end}
    .right{text-align: start}


    @media screen and (max-width: 1023px){
        .container{
            height: 80px;
            width: 60%;
            border-radius: 0 5px 5px 0;
        }

        .title{
            font-size: 30px;
        }

        .right{
            flex: 1;
            text-align: start;
        }
    }

    @media screen and (max-width: 600px) {
        .container{
            width: 80%;
        }
    }
</style>