---
interface Title {
    className: string
}   

const { className } = Astro.props
---

<h1 class={className} >
    <slot/>
</h1>

<style>
    h1{
        color: var(--title);
        font-weight: 900;
        font-size: 60px;
        @media (max-width: 512px) {
            font-size: 50px;   
        }
    }
</style>